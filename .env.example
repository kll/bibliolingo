# Atlassian data via nodejs-confluence-export. https://github.com/aashari/nodejs-confluence-export
ATLASSIAN_SITE_NAME=
ATLASSIAN_USER_EMAIL=
ATLASSIAN_API_TOKEN=

# OpenAI API
OPENAI_API_KEY=sk-...

# MongoDB Atlas
# For local use, shouldn't need to change this if using the provided Docker setup.
MONGO_DB_URL=mongodb://localhost:27017/?directConnection=true
DB_NAME=bibliolingo
COLLECTION_NAME=chunks

# Retrieval settings
DEFAULT_ALPHA=0.5          # BM25 weight (0=vector only, 1=BM25 only)
DEFAULT_TOP_K=10
RRF_K=60                   # Reciprocal rank fusion constant
CONFIDENCE_THRESHOLD=0.3   # Score threshold for fallback

# LLM settings
DEFAULT_LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1000

# Logging
LOG_LEVEL=INFO
